
<DegreeWindow>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 15
        MDTopAppBar:
            title: 'uniplace'
            md_bg_color: '#EEEEEE'
            specific_text_color: '#C8102E'
            anchor_title: "center"
            left_action_items: [["arrow-left", lambda x: app.change_window(app.last_screen)]]
            right_action_items: [['account-school-outline']]
            elevation: 0

        MDBottomNavigation:
            id: bottom_navigation
            text_color_active: 200/255, 16/255, 46/255, 1
            text_color_normal: 200/255, 16/255, 46/255, 0.2
            panel_color: '#EEEEEE'
            selected_color_background: '#EEEEEE'
            
            ### UNIVERSITY GENERAL INFORMATION
            MDBottomNavigationItem:
                name: 'info'
                text: 'Informació'
                icon: 'information-variant'
                MDScrollView:
                    MDBoxLayout:
                        orientation: 'vertical'
                        spacing: 20
                        padding: 50, 10
                        adaptive_height: True
                        MDBoxLayout:
                            adaptive_height: True
                            padding: 50,20,50,20
                            spacing: 150
                            MDLabel:
                                id: screen_title
                                halign: 'center'
                                font_size: dp(25) if len(self.text) <=35 else dp(20)
                            Image:
                                id: logo
                                #source: 'assets/upf_logo_no_writings.png'
                                size_hint: None, None
                                size: (dp(58), dp(58)) if self.source == 'assets/upf_logo_no_writings.png' else (dp(88), dp(88))
                                allow_stretch: True
                                keep_ratio: True

                        MDSeparator:
                            color: 200/255, 16/255, 46/255, 1

                        MDBoxLayout:
                            adaptive_height: True
                            height: dp(150)
                            #padding: 30
                            spacing: 60
                            MDBoxLayout:
                                padding: 30, 10
                                InfoBox:
                                    anchor_x: 'center'
                                    anchor_y: 'center'
                                    MDBoxLayout:
                                        orientation: 'vertical'
                                        adaptive_height: True
                                        spacing: 10
                                        MDLabel:
                                            id: places
                                            font_size: dp(70)
                                            bold: True
                                            size_hint_y: None
                                            height: self.texture_size[1]
                                            halign: 'center'

                                        MDLabel:
                                            text: "PLACES"
                                            size_hint_y: None
                                            height: self.texture_size[1]
                                            halign: 'center'
                            MDBoxLayout:
                                padding: 30, 10
                                InfoBox:
                                    anchor_x: 'center'
                                    anchor_y: 'center'
                                    MDBoxLayout:
                                        orientation: 'vertical'
                                        adaptive_height: True
                                        spacing: 10
                                        MDLabel:
                                            text: '240'
                                            font_size: dp(70)
                                            bold: True
                                            size_hint_y: None
                                            height: self.texture_size[1]
                                            halign: 'center'

                                        MDLabel:
                                            text: "CRÈDITS ETCS"
                                            size_hint_y: None
                                            height: self.texture_size[1]
                                            halign: 'center'
                        MDLabel:
                            text: 'Ultimes notes de tall'
                            theme_text_color: 'Custom'
                            text_color: 200/255, 16/255, 46/255, 1
                            halign: 'center'
                            size_hint_y: None
                            height: self.texture_size[1]
                            font_size: dp(13)
                        MDBoxLayout:
                            adaptive_height: True
                            orientation: 'vertical'
                            padding: 0, 20
                            spacing: 30
                            canvas.before:
                                Color:
                                    id: infobox
                                    rgba: 200/255, 16/255, 46/255, 1
                                Line:
                                    width: 2
                                    rounded_rectangle: self.x, self.y, self.width, self.height, 10
                            MDBoxLayout:
                                adaptive_height: True
                                MDLabel:
                                    text: '2020'
                                    halign: 'center'
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    font_size: dp(22)
                                    bold: True
                                MDLabel:
                                    text: '2021'
                                    halign: 'center'
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    font_size: dp(22)
                                    bold: True
                                MDLabel:
                                    text: '2022'
                                    halign: 'center'
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    font_size: dp(22)
                                    bold: True
                            MDBoxLayout:
                                adaptive_height: True
                                MDLabel:
                                    id: nota_20
                                    halign: 'center'
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    font_size: dp(18)

                                MDLabel:
                                    id: nota_21
                                    halign: 'center'
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    font_size: dp(18)
                                    #bold: True
                                MDLabel:
                                    id: nota_22
                                    halign: 'center'
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    font_size: dp(18)
                                    #bold: True
                        MDBoxLayout:
                            id: panel
                            orientation: 'vertical'
                            adaptive_height: True
                            padding: 10, 0

                        MDBoxLayout:
                            adaptive_height: True
                            orientation: 'vertical'
                            MDFlatButton:
                                text: '[u]Pàgina web del grau[/u]'
                                underline: True
                                theme_text_color: 'Custom'
                                text_color: 200/255, 16/255, 46/255, 1
                                size_hint_y: None
                                font_size: dp(13)
                                pos_hint: {'center_x': 0.5}
                                markup: True
                                on_release: root.hyperlink('https://www.upf.edu/web/graus/grau-enginyeria-informatica')
                            MDFlatButton:
                                text: '[u]Indicadors complerts[/u]'
                                theme_text_color: 'Custom'
                                text_color: 200/255, 16/255, 46/255, 1
                                adaptive_height: True
                                size_hint_y: None
                                font_size: dp(13)
                                pos_hint: {'center_x': 0.5}
                                markup: True
                                on_release: root.hyperlink('https://www.upf.edu/web/universitat/grau-en-enginyeria-en-informatica')
                            MDFlatButton:
                                text: '[u]Ubicació del campus[/u]'
                                theme_text_color: 'Custom'
                                text_color: 200/255, 16/255, 46/255, 1
                                adaptive_height: True
                                font_size: dp(13)
                                pos_hint: {'center_x': 0.5}
                                markup: True
                                on_release: root.hyperlink('https://www.google.com/maps/place/Campus+del+Poblenou/@41.4040793,2.1938415,15z/data=!4m6!3m5!1s0x12a4a257a38c20e1:0x5ff56d0a8cbc150c!8m2!3d41.4040793!4d2.1938415!16s%2Fg%2F11xg6y40_?entry=ttu')
                            MDRectangleFlatButton:
                                id: compare_button
                                text: "Compara!"
                                theme_text_color: "Custom"
                                text_color: "black"
                                line_color: 200/255, 16/255, 46/255, 1
                                #adaptive_height: True
                                size_hint_y: 0.05
                                font_size: dp(13)
                                pos_hint: {'center_x': 0.5}
                                markup: True
                                on_release: root.add_grau_to_compare()


            ### SUBJECTS
            MDBottomNavigationItem:
                name: 'assignatures'
                text: 'Assignatures'
                icon: 'bookshelf'
                BoxLayout:
                    orientation: 'vertical'
                    spacing: 30
                    padding: 30

                    MDLabel:
                        id: path
                        theme_text_color: 'Custom'
                        text_color: '#B0B0B0'
                        font_size: dp(14)
                        size_hint_y:  .02
                        #bold: True

                    MDLabel:
                        text: 'Assignatures'
                        theme_text_color: 'Custom'
                        text_color: '#C8102E'
                        font_size: 50
                        bold: True
                        size_hint_y:  0.05

                    ScrollView:
                        MDBoxLayout:
                            id: courses_layout
                            orientation: 'vertical'
                            adaptive_height: True
                            spacing: 40
                            padding: 5
                            # size_hint: (1, .93)
                

            ### COMPARE
            MDBottomNavigationItem:
                id: compare_icon
                name: 'compara'
                text: 'Compara'
                icon: 'scale-balance'
                badge_icon: 'numeric-0'
                MDBoxLayout:
                    orientation: 'vertical'
                    #adaptive_height: True
                    spacing: 10
                    padding: 0, 0, 0, 15
                    CompareWin:
                        id: compare_box_grau
                    MDRectangleFlatButton:
                        id: delete_button
                        text: "Esborrar Comparació!"
                        theme_text_color: "Custom"
                        text_color: "black"
                        line_color: 200/255, 16/255, 46/255, 1
                        #adaptive_height: True
                        size_hint_y: 0.03
                        font_size: dp(13)
                        pos_hint: {'center_x': 0.5}
                        markup: True
                        on_release: root.delete_comparation()