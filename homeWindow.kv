
<HomeWindow>:
    name: 'home'
    BoxLayout:
        orientation: 'vertical'
        spacing: 15

        MDTopAppBar:
            title: 'uniplace'
            md_bg_color: '#EEEEEE'
            specific_text_color: '#C8102E'
            anchor_title: "center"
            elevation: 0


        MDTextField:
            id: search_field
            hint_text: 'Buscar'
            mode: 'round'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint_x: .95
            icon_left: 'magnify'
            icon_left_color_focus: '#C8102E'
            text_color_focus: 'grey'
            line_color_focus: 'grey'
            fill_color_normal: '#EEEEEE'
            on_text_validate: app.change_window('search') if self.text != '' else None

        ScrollView:     
            GridLayout:
                cols: 1
                spacing: 20
                size_hint_y: None
                height: 1750
                padding: dp(10)
                Button:
                    background_normal: 'assets/upf_campus.jpeg'
                    background_down: 'assets/upf_campus.jpeg'
                    on_release: root.update_selected_uni(1); app.change_window('uni')
                    Image:
                        source: 'assets/upf_logo.png'
                        y: self.parent.y - self.parent.height*0.5 + 75
                        x: self.parent.x + self.parent.width * 0.5 - 150
                        size: 300, 300

                Button:
                    background_normal: 'assets/upc_campus.jpeg'
                    background_down: 'assets/upc_campus.jpeg' 
                    on_release: root.update_selected_uni(2); app.change_window('uni')
                    Image:
                        source: 'assets/upc_logo.png'
                        y: self.parent.y - self.parent.height*0.5
                        x: self.parent.x + self.parent.width * 0.5 - 225
                        size: 450, 450
                
                Button:
                    background_normal: 'assets/uab_campus.jpeg'
                    background_down: 'assets/uab_campus.jpeg'
                    on_release: app.change_window('degree')
                    Image:
                        source: 'assets/uab_logo.png'
                        y: self.parent.y - self.parent.height*0.5 + 70
                        x: self.parent.x + self.parent.width * 0.5 - 150
                        size: 300, 300
                
                Button:
                    background_normal: 'assets/ub_campus.jpeg'
                    background_down: 'assets/ub_campus.jpeg' 
                    Image:
                        source: 'assets/ub_logo.png'
                        y: self.parent.y - self.parent.height*0.5 + 30
                        x: self.parent.x + self.parent.width * 0.5 - 200
                        size: 400, 400
                
                Button:
                    background_normal: 'assets/udl_campus.jpeg'
                    background_down: 'assets/udl_campus.jpeg' 
                    Image:
                        source: 'assets/udl_logo.png'
                        y: self.parent.y - self.parent.height*0.5 + 30
                        x: self.parent.x + self.parent.width * 0.5 - 200
                        size: 400, 400
                
                Button:
                    background_normal: 'assets/urv_campus.jpeg'
                    background_down: 'assets/urv_campus.jpeg' 
                    Image:
                        source: 'assets/urv_logo.png'
                        y: self.parent.y - self.parent.height*0.5 + 30
                        x: self.parent.x + self.parent.width * 0.5 - 200
                        size: 400, 400
                
                Button:
                    background_normal: 'assets/udg_campus.jpeg'
                    background_down: 'assets/udg_campus.jpeg' 
                    Image:
                        source: 'assets/udg_logo.png'
                        y: self.parent.y - self.parent.height*0.5 + 100
                        x: self.parent.x + self.parent.width * 0.5 - 125
                        size: 250, 250
            