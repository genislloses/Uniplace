
<UniversityWindow>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 15
        MDTopAppBar:
            id: app_name
            title: 'uniplace'
            md_bg_color: '#EEEEEE'
            specific_text_color: root.color
            anchor_title: "center"
            left_action_items: [["arrow-left", lambda x: app.change_window('home')]]
            right_action_items: [['account-school-outline']]
            elevation: 0

        MDBottomNavigation:
            id: bottom_navigation
            text_color_active: 200/255, 16/255, 46/255, 1
            text_color_normal: 200/255, 16/255, 46/255, 0.2
            panel_color: '#EEEEEE'
            selected_color_background: '#EEEEEE'
            
            ### UNIVERSITY GENERAL INFORMATION
            MDBottomNavigationItem:
                name: 'info'
                text: 'Informació'
                icon: 'information-variant'
                BoxLayout:
                    orientation: 'vertical'
                    padding: 15
                    spacing: 20
                    MDBoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: .20
                        MDLabel:
                            id: titol_panell
                            text: 'PANELL GENERAL'
                            theme_text_color: 'Custom'
                            font_size: dp(23)
                            halign: 'center'
                            color: 0,0,0,1
                            text_size: self.size
                            valign: 'middle'
                        Image:
                            id: uni_logo
                            size_hint_x: 0.5
                            size_hint_y: 1
        
                    HSeparator:
                    MDBoxLayout:
                        spacing: 20
                        InfoBox:
                            anchor_x: 'center'
                            anchor_y: 'center'
                            MDBoxLayout:
                                orientation: 'vertical'
                                adaptive_height: True
                                MDLabel:
                                    id: graus
                                    font_size: 80
                                    bold: True
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    halign: 'center'
                                    
                                MDLabel:
                                    text: "GRAUS"
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    halign: 'center'
                            
                        InfoBox:
                            anchor_x: 'center'
                            anchor_y: 'center'
                            MDBoxLayout:
                                orientation: 'vertical'
                                adaptive_height: True
                                MDLabel:
                                    id: masters
                                    bold: True
                                    font_size: 80
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    halign: 'center'
                                    
                                MDLabel:
                                    text: "MÀSTERS"
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    halign: 'center'
                    InfoBox:
                        anchor_x: 'center'
                        anchor_y: 'center'
                        MDBoxLayout:
                            orientation: 'vertical'
                            adaptive_height: True
                            MDLabel:
                                id: estudiants
                                bold: True
                                font_size: 80
                                size_hint_y: None
                                height: self.texture_size[1]
                                halign: 'center'
                                
                            MDLabel:
                                text: "ESTUDIANTS DE GRAU"
                                size_hint_y: None
                                height: self.texture_size[1]
                                halign: 'center'
                    MDLabel: 
                        id: label1
                        text: 'Mitja de les últimes notes de tall'
                        color: root.color
                        size_hint_y: None
                        height: self.texture_size[1]
                        halign: 'center'
                    InfoBox:
                        anchor_x: 'center'
                        anchor_y: 'center'
                        adaptive_height: True
                        MDBoxLayout:
                            orientation: 'horizontal'
                            AnchorLayout:
                                anchor_x: 'center'
                                anchor_y: 'center'
                                MDBoxLayout:
                                    orientation: 'vertical'
                                    adaptive_height: True
                                    spacing: 100
                                    MDLabel:
                                        id: nota_2019
                                        bold: True
                                        halign: 'center'
                                        font_size: 60
                                    MDLabel:
                                        text: "2019"
                                        halign: 'center'
                                        font_size: 40
                            AnchorLayout:
                                anchor_x: 'center'
                                anchor_y: 'center'    
                                MDBoxLayout:
                                    orientation: 'vertical'
                                    adaptive_height: True
                                    spacing: 100
                                    MDLabel:
                                        id: nota_2020
                                        bold: True
                                        halign: 'center'
                                        font_size: 60
                                    MDLabel:
                                        text: "2020"
                                        halign: 'center'
                                        font_size: 40
                            AnchorLayout:
                                anchor_x: 'center'
                                anchor_y: 'center'
                                MDBoxLayout:
                                    orientation: 'vertical'
                                    adaptive_height: True
                                    spacing: 100
                                    MDLabel:
                                        id: nota_2021
                                        bold: True
                                        halign: 'center'
                                        font_size: 60
                                    MDLabel:
                                        text: "2021"
                                        halign: 'center'
                                        font_size: 40
                    
                    MDBoxLayout:
                        orientation: 'vertical'
                        spacing: 20
                        padding: 10
                        adaptive_height: True
                        MDBoxLayout:
                            adaptive_height: True
                            MDLabel:
                                text: "Ubicació"
                                halign: 'left'
                                font_size: 35
                                size_hint_y: None
                                height: self.texture_size[1]
                            MDLabel:
                                text: "Barcelona" 
                                halign: 'right'
                                font_size: 35
                                size_hint_y: None
                                height: self.texture_size[1]
                                color: .4,.4,.4,1                               
                        MDBoxLayout:
                            adaptive_height: True
                            MDLabel:
                                text: "Rector de l'Universitat"
                                halign: 'left'
                                font_size: 35
                                size_hint_y: None
                                height: self.texture_size[1]
                            MDLabel:
                                id: rector
                                halign: 'right'
                                font_size: 35
                                size_hint_y: None
                                height: self.texture_size[1]
                                color: .4,.4,.4,1
                        MDTextButton:
                            id: link
                            text: 'Pàgina web de la universitat'
                            underline: True
                            font_size: 25
                            on_release: root.hyperlink(root.get_link())   
                            color: root.color
                            pos_hint: {"center_x": .5, "center_y": .5}                      
                
            ### DEGREES '#C8102E'
            MDBottomNavigationItem:
                name: 'graus'
                text: 'Graus'
                icon: 'school-outline'
                BoxLayout:
                    orientation: 'vertical'
                    spacing: 25
                    padding: 15
                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint: (1, .07)
                        MDLabel:
                            id: label2
                            text: ' Graus'
                            theme_text_color: 'Custom'
                            text_color: root.color
                            font_size: 50
                            bold: True
                            size_hint_x: .3

                        MDTextField:
                            id: label3
                            hint_text: 'Buscar'
                            mode: 'round'
                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                            size_hint: (.75, .9)
                            icon_left: 'magnify'
                            icon_left_color_focus: root.color
                            font_size: 50
                            text_color_focus: 'grey'
                            line_color_focus: 'grey'
                            fill_color_normal: '#EEEEEE'

                    ScrollView:
                        MDBoxLayout:
                            id: ambits_layout
                            orientation: 'vertical'
                            adaptive_height: True
                            spacing: 40
                            padding: 5
                            # size_hint: (1, .93)
                

            ### COMPARE
            MDBottomNavigationItem:
                id: compare_icon
                name: 'compara'
                text: 'Compara'
                icon: 'scale-balance'
                badge_icon: 'numeric-0'
                CompareWin:
                    id: compare_box



